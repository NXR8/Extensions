{
  "manifest_version": 3,
  "name": "DeepSeek Direction Adjuster",
  "version": "1.2",
  "description": "Adds direction controls from 'RTL' and 'LTR' to blocks in DeepSeek chat.",
  "author": "NXR8",  
  "homepage_url": "https://github.com/NXR8/Extensions/DeepSeek-Direction-Adjuster",  
  "developer": {
    "name": "NXR8",
    "url": "https://NXR8.ME/"
  },
  "permissions": ["scripting"],
  "host_permissions": ["https://chat.deepseek.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chat.deepseek.com/*"],
      "js": ["script.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}

